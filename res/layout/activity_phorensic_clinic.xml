<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PhorensicClinicActivity" >

    <TextView
        android:id="@+id/txt_clinica_forense"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/clinica_forense"
        android:textSize="24sp" />

    <Button
        android:id="@+id/Button_sexual"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_custom"
        android:layout_below="@+id/Button_personal_injuries"
        android:text="Delito Sexual"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold" 
        android:drawableRight="@drawable/gender"
        android:layout_marginBottom="4dp"
        android:onClick="goSexual"/>
    
    <Button
        android:id="@+id/Button_drunk"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_custom"
        android:layout_below="@+id/Button_ClinicAge"
        android:text="Embriaguez"
        android:drawableRight="@drawable/drink"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold" 
        android:layout_marginBottom="4dp"
        android:onClick="goDrunk"/>

    <Button
        android:id="@+id/Button_personal_injuries"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Button_sexual"
        android:layout_below="@+id/txt_clinica_forense"
        android:layout_marginTop="16dp"
        android:drawableRight="@drawable/hit"
        android:background="@drawable/button_custom"
        android:onClick="goPersonalInjuries"
        android:text="Lesiones Personales"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Button_ClinicAge"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Button_sexual"
        android:layout_below="@+id/Button_sexual"
        android:background="@drawable/button_custom"
        android:onClick="goClinicAge"
        android:drawableRight="@drawable/family"
        android:text="Edad ClÃ­nica"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold" />

</RelativeLayout>